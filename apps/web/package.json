{
    "name": "prtg-sensor-hub-web",
    "version": "2.5.0",
    "private": true,
    "scripts": {
        "build": "next build",
        "dev": "next dev --port 3000",
        "pages:build": "npx -y @opennextjs/cloudflare build",
        "start": "next start",
        "lint": "next lint",
        "test": "jest",
        "test:watch": "jest --watch",
        "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
